@model ST10084225_FarmCentral_MVC.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-header">
        <h1>Delete</h1>
        <h6 class="card-subtitle text-muted">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h6>
        </div>

    <div class="card-body">
        <div>
            <div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Date)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Uploaded Image
                    </dt>
                    <dd class="col-sm-10">
                        <img decoding="async" src="@("~/Images/UserImages/"+Model.ImageID)" class="CoverImage ImageRoundBorders" height="250px" asp-append-version="true" />
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProductID" />
                <input type="hidden" asp-for="FarmerID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>



</div>

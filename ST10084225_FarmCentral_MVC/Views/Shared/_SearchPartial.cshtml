@model ST10084225_FarmCentral_MVC.Models.Filter
           
<form class="d-flex" asp-action="Index" asp-controller="Products" method="post">
            
                <div class="box">
            
             <div class="form-group">
             <label asp-for="MaxPrice" class="control-label">Max Price</label>
             <input asp-for="MaxPrice" class="form-control" placeholder="Max Price"/>
             <span asp-validation-for="MaxPrice" class="text-danger"></span>
             </div>

        <div class="form-group">
            <label asp-for="Category" class="control-label"> Category </label>
            <select asp-for="Category" class="form-select">
                <option>Select Category</option>
                <option>Fruit</option>
                <option>Vegetable</option>
                <option>Nuts</option>
                <option>Jam</option>
                <option>Juice</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
       <div class="d-flex">
       <input class="form-control" type="search" asp-for="SearchTerm" placeholder="Search By: Product name, Product ID, Farmer Name, Farmer ID">
       <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </div>
    </div>
</form>